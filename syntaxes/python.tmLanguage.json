{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "python-comment-sql-syntax",
	"scopeName": "source.python",
	"patterns": [
		{
			"comment": "Python multi-line strings",
			"begin": "(')(SELECT |INSERT INTO |DELETE |UPDATE |CREATE TABLE |CREATE INDEX|select |insert into |delete |update |create table |create index)",
			"beginCaptures": {
				"2": {
					"name": "comment.sql"
				}
			},
			"end": "(')",
			"patterns": [
				{
					"include": "source.sql"
				}
			]
		},
		{
			"comment": "Python multi-line strings",
			"begin": "(\")(SELECT |INSERT INTO |DELETE |UPDATE |CREATE TABLE |CREATE INDEX|select |insert into |delete |update |create table |create index)",
			"beginCaptures": {
				"2": {
					"name": "comment.sql"
				}
			},
			"end": "(\")",
			"patterns": [
				{
					"include": "source.sql"
				}
			]
		},
		{
			"begin": "(''')",
			"beginCaptures": {
				"2": {
					"name": "comment.sql"
				}
			},
			"end": "(''')",
			"patterns": [
				{
					"include": "source.sql"
				}
			]
		},
		{
			"begin": "(\"\"\")",
			"end": "(\"\"\")",
			"beginCaptures": {
				"2": {
					"name": "comment.sql"
				}
			},
			"patterns": [
				{
					"include": "source.sql"
				}
			]
		}
	]
}